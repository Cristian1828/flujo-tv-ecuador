---
import { site, waLink } from '../config/site';

const baseMessage = 'Hola, quiero comprar Flujo TV Ecuador.';

const getMonthsFromPlanId = (id: string) => {
  const match = id.match(/^(\d+)m$/);
  return match ? Number(match[1]) : null;
};

const getDeliveredMonths = (planId: string) => {
  if (planId === '6m') return 7;
  if (planId === '12m') return 14;
  const months = getMonthsFromPlanId(planId);
  return months;
};

const calcSavingsPercent = (planPrice: number, months: number, oneMonthPrice: number) => {
  const baseline = months * oneMonthPrice;
  if (!Number.isFinite(baseline) || baseline <= 0) return null;
  const pct = (1 - planPrice / baseline) * 100;
  if (!Number.isFinite(pct) || pct <= 0) return null;
  return Math.round(pct);
};
---

<section id="planes" class="py-16 sm:py-20">
  <div class="mx-auto max-w-6xl px-4">
    <div class="flex items-end justify-between gap-6 flex-col md:flex-row">
      <div>
        <h2 class="text-3xl sm:text-4xl font-black tracking-tight text-slate-900">Planes Flexibles sin contratos.</h2>
        <p class="mt-2 max-w-2xl text-slate-900/70">
          Elige el tiempo que te convenga. Todos incluyen soporte garantizado y hasta 3 pantallas simultáneas.
        </p>
      </div>
    </div>

    <div class="mt-10 grid gap-4 lg:grid-cols-4">
      {site.pricing.plans.map((plan) => {
        const href = waLink(`${baseMessage} Me interesa el plan ${plan.name} (${site.pricing.currencyCode} ${plan.price}).`);
        const isFeatured = Boolean(plan.highlight);

        const oneMonthPlan = site.pricing.plans.find((p) => p.id === '1m');
        const months = getDeliveredMonths(plan.id);
        const savingsPct =
          oneMonthPlan && months ? calcSavingsPercent(plan.price, months, oneMonthPlan.price) : null;

        const badgeText =
          plan.id === '3m'
            ? 'Más popular'
            : plan.id === '6m'
              ? `Ahorras ${savingsPct ?? 0}%`
              : plan.id === '12m'
                ? `Ahorras ${savingsPct ?? 0}%`
                : '';

        const badgeClass = badgeText ? 'bg-emerald-500 text-white' : '';

        return (
          <article
            class="relative rounded-[2rem] border p-6 shadow-soft transition"
            data-plan-card
            data-featured={isFeatured ? 'true' : 'false'}
            data-state={isFeatured ? 'active' : 'inactive'}
          >
            {badgeText ? (
              <div class="pointer-events-none absolute -top-4 right-6 z-10">
                <span
                  class={`inline-flex items-center justify-center rounded-full px-3 py-1 text-xs font-black shadow-soft ring-1 ring-black/5 ${badgeClass}`}
                  data-plan-badge
                >
                  {badgeText}
                </span>
              </div>
            ) : null}

            <div class="flex items-start justify-between gap-4">
              <div>
                <div class="text-sm font-extrabold" data-plan-label>{plan.label}</div>
                <div class="mt-1 text-2xl font-black">{plan.name}</div>
              </div>
            </div>

            <div class="mt-4 flex items-end gap-2">
              <div class="text-4xl font-black">{plan.price}</div>
              <div class="pb-1 text-sm" data-plan-currency>{site.pricing.currencyCode}</div>
            </div>

            <ul class="mt-5 space-y-2 text-sm">
              {plan.features.map((f) => (
                <li class="flex gap-3">
                  <span class="mt-0.5 text-emerald-500" aria-hidden="true" data-plan-check>
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-check-icon lucide-check"><path d="M20 6 9 17l-5-5"/></svg>
                  </span>
                  <span class="" data-plan-feature>{f}</span>
                </li>
              ))}
            </ul>

            <a
              href={href}
              target="_blank"
              rel="noopener noreferrer"
              class="mt-6 inline-flex w-full items-center justify-center rounded-2xl px-4 py-3 font-black transition"
              data-plan-cta
            >
              Quiero empezar ya
            </a>
          </article>
        );
      })}
    </div>

    <p class="mt-6 text-center text-sm text-slate-900/70">
      ¿Tienes dudas sobre qué plan elegir? <span class="font-black text-slate-900">Escríbenos al WhatsApp</span> y te asesoramos al instante.
    </p>
  </div>
</section>

<script is:inline>
  (() => {
    const cards = Array.from(document.querySelectorAll('[data-plan-card]'));
    if (!cards.length) return;

    const ACTIVE = {
      card: ['bg-slate-900', 'text-white', 'border-slate-900'],
      label: ['text-white/85'],
      currency: ['text-white/70'],
      dot: ['bg-white/55'],
      feature: ['text-white/80'],
      cta: ['bg-white', 'text-slate-900', 'hover:bg-white/90']
    };

    const INACTIVE = {
      card: ['bg-white/70', 'text-slate-900', 'border-slate-900/10', 'hover:bg-white'],
      label: ['text-slate-900/75'],
      currency: ['text-slate-900/60'],
      dot: ['bg-slate-900/35'],
      feature: ['text-slate-900/70'],
      cta: ['bg-slate-900', 'text-white', 'hover:bg-slate-800']
    };

    const apply = (el, active) => {
      const cfg = active ? ACTIVE : INACTIVE;
      const other = active ? INACTIVE : ACTIVE;

      el.classList.remove(...other.card);
      el.classList.add(...cfg.card);
      el.dataset.state = active ? 'active' : 'inactive';

      const label = el.querySelector('[data-plan-label]');
      const currency = el.querySelector('[data-plan-currency]');
      const cta = el.querySelector('[data-plan-cta]');

      if (label) {
        label.classList.remove(...other.label);
        label.classList.add(...cfg.label);
      }
      if (currency) {
        currency.classList.remove(...other.currency);
        currency.classList.add(...cfg.currency);
      }
      if (cta) {
        cta.classList.remove(...other.cta);
        cta.classList.add(...cfg.cta);
      }

      el.querySelectorAll('[data-plan-dot]').forEach((dot) => {
        dot.classList.remove(...other.dot);
        dot.classList.add(...cfg.dot);
      });

      el.querySelectorAll('[data-plan-check]').forEach((check) => {
        check.classList.remove('text-emerald-500', 'text-emerald-300');
        check.classList.add(active ? 'text-emerald-300' : 'text-emerald-500');
      });

      el.querySelectorAll('[data-plan-feature]').forEach((feat) => {
        feat.classList.remove(...other.feature);
        feat.classList.add(...cfg.feature);
      });
    };

    const featured = cards.find((c) => c.getAttribute('data-featured') === 'true') || cards[0];

    const resetToFeatured = () => {
      cards.forEach((c) => apply(c, c === featured));
    };

    // Estado inicial
    resetToFeatured();

    cards.forEach((card) => {
      card.addEventListener('mouseenter', () => {
        cards.forEach((c) => apply(c, c === card));
      });
    });

    // Cuando sales del bloque, vuelve el favorito a azul
    const section = document.getElementById('planes');
    section?.addEventListener('mouseleave', resetToFeatured);
  })();
</script>
